<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.mondial.ticket.model">
    <class name="User" table="users">
        <id name="id" column="id" type="int">
            <generator class="native"/>
        </id>
        <property name="username" column="username" type="string" length="50" unique="true" not-null="true"/>
        <property name="password" column="password" type="string" length="100" not-null="true"/>
        <property name="role" column="role" type="string" length="20" not-null="true"/>
        <property name="nom" column="nom" type="string" length="100"/>
        <property name="email" column="email" type="string" length="100"/>
    </class>
</hibernate-mapping>

